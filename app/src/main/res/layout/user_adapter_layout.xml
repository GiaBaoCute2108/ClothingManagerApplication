                android:paddingLeft="10dp"/>
            <TextView
                android:id="@+id/txtUserPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0829421631"
                android:textSize="18sp"
                android:paddingLeft="10dp"/>
            <TextView
                android:id="@+id/txtUserAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
